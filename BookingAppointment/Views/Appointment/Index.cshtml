@model IEnumerable<BookingAppointment.ViewModels.IndexAppointmentDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Записи на консультацію</h1>

<p>
    <a asp-action="Create">Додати новий запис</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormatOfAppointment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceOfAppointment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaceOfAppointment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SummaryOfAppointment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormatOfAppointment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceOfAppointment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceOfAppointment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SummaryOfAppointment)
            </td>
            <td>
                @Html.ActionLink("Внести зміни", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Детально", "Details", new { id = item.Id }) |
                @Html.ActionLink("Видалити", "Remove", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
